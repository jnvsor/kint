{
  "name": "kint",
  "description": "Kint - debugging helper for PHP developers",
  "contributors": [
    {
      "name": "Jonathan Vollebregt",
      "url": "https://github.com/jnvsor",
      "email": "jnvsor@gmail.com"
    },
    {
      "name": "Rokas Å leinius",
      "url": "https://github.com/raveren",
      "email": "raveren@gmail.com"
    }
  ],
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.1",
    "eslint": "^3.0",
    "eslint-config-standard": "^7.0",
    "eslint-plugin-html": "^1.5.2",
    "eslint-plugin-promise": "^3.0",
    "eslint-plugin-standard": "^2.0",
    "uglify-js": "^2.8.29",
    "vueify": "^9.1.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      "vueify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  },
  "scripts": {
    "format:js": "eslint --ext .js,.vue --fix 'resources/js/'",
    "build:js": "npm run build:js:rich && npm run build:js:rich_microtime",
    "build:js:rich": "uglifyjs resources/js/rich/main.js -cmv --lint > resources/compiled/rich.js",
    "build:js:rich_microtime": "uglifyjs resources/js/rich/microtime.js -cmv --lint > resources/compiled/rich_microtime.js",
    "build:js:vue": "cross-env NODE_ENV=production browserify -g envify resources/js/vue/main.js | uglifyjs -vc warnings=false -m --lint > resources/compiled/vue.js"
  }
}
